<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bobotosoft.economy101"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/coin"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bobotosoft.economy101.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bobotosoft.economy101.ExpensesActivity"
            android:label="@string/title_activity_expenses" >
        </activity>
        <activity
            android:name="com.bobotosoft.economy101.IncomeActivity"
            android:label="@string/title_activity_income" >
        </activity>
        <activity
            android:name="com.bobotosoft.economy101.StatsActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" >
        </activity>
    </application>

</manifest>